{
  "name": "budget-charts",
  "version": "0.1.0",
  "description": "Interactive charts for budget planning",
  "main": "dist/main/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "compile": "tsc && webpack --mode=development",
    "copy": "copyfiles -f src/index.html dist && copyfiles -f src/styles/*.css dist/styles",
    "build": "npm run clean && npm run compile && npm run copy",
    "start": "npm run build && electron .",
    "build-renderer": "webpack --mode=development"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rzllmr/budget-charts.git"
  },
  "author": "rzllmr <30299783+rzllmr@users.noreply.github.com>",
  "license": "MIT",
  "dependencies": {
    "@types/color": "^3.0.3",
    "chart.js": "^4.2.1",
    "color": "^4.2.3",
    "csv-parse": "^5.3.10",
    "font-awesome": "^4.7.0"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "electron": "^23.1.3",
    "electron-builder": "^23.6.0",
    "eslint": "^8.36.0",
    "rimraf": "^4.4.0",
    "terser-webpack-plugin": "^5.3.9",
    "ts-loader": "^9.4.3",
    "typescript": "^4.9.5",
    "webpack": "^5.84.1",
    "webpack-cli": "^5.1.1"
  },
  "build": {
    "appId": "de.rzllmr.budget-charts",
    "asar": false,
    "directories": {
      "output": "bin"
    },
    "win": {
      "target": "portable",
      "icon": "build/icon.ico"
    },
    "extraResources": [
      {
        "from": "build",
        "to": "app",
        "filter": "env.js"
      }
    ]
  }
}
